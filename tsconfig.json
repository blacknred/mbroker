{
  "compilerOptions": {
    "target": "esnext",
    "module": "preserve",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "moduleResolution": "bundler", // node
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    // extras
    "noUnusedLocals": true,
    "declaration": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "lib": ["es2023"],
  },
  "include": ["packages/**/*"],
}
